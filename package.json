{
	"name": "fastify-prisma-ts-api",
	"version": "1.0.0",
	"author": "Artem Melnyk",
	"license": "MIT",
	"type": "module",
	"devDependencies": {
		"@commitlint/cli": "^17.0.1",
		"@commitlint/config-conventional": "^17.0.0",
		"@faker-js/faker": "^7.1.0",
		"@types/jest": "^28.1.0",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.0",
		"jest": "^28.1.0",
		"jest-mock-extended": "^2.0.6",
		"pino-pretty": "^7.6.1",
		"prettier": "^2.6.2",
		"prisma": "3.14.0",
		"ts-jest": "^28.0.4",
		"tsx": "^3.4.2"
	},
	"scripts": {
		"dev": "npx tsx watch ./src/main.ts",
		"dev-local": "NODE_ENV=development LOCAL=true npx tsx watch ./src/main.ts",
		"build": "npx tsc -p ./tsconfig.build.json",
		"start:prod": "NODE_ENV=production node ./dist/main.js",
		"prod": "npm run build && npm run start:prod",
		"test": "jest",
		"test-local": "NODE_ENV=test LOCAL=true jest",
		"test-local:unit": "NODE_ENV=test LOCAL=true jest unit.test.ts",
		"test-local:unit:watch": "NODE_ENV=test LOCAL=true jest --watch unit.test",
		"test-local:integration": "NODE_ENV=test LOCAL=true jest integration.test.ts",
		"lint": "npx prettier --write ./src && npx eslint ./src",
		"commit": "npx cz",
		"prepare": "husky install",
		"prisma:migrate:dev:dev-local": "npx dotenv -e .env.development.local npx prisma migrate dev",
		"prisma:migrate:deploy:test-local": "npx dotenv -e .env.test.local npx prisma migrate deploy",
		"prisma:migrate:deploy:dev-local": "npx dotenv -e .env.development.local npx prisma migrate deploy",
		"prisma:reset:test-local": "npx dotenv -e .env.test.local npx prisma migrate reset",
		"prisma:generate": "npx prisma generate --schema=./prisma/schema.prisma",
		"docker:dev": "docker-compose --env-file .env.development -f docker-compose.development.yml -p fastify-prisma-ts-api-dev up",
		"docker:test": "docker-compose --env-file .env.test -f docker-compose.test.yml -p fastify-prisma-ts-api-test up",
		"docker:prod": "docker-compose --env-file .env.production -f docker-compose.production.yml -p fastify-prisma-ts-api-prod up"
	},
	"dependencies": {
		"@fastify/cookie": "^6.0.0",
		"@fastify/cors": "^7.0.0",
		"@prisma/client": "3.14.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/node": "^17.0.36",
		"bcryptjs": "^2.4.3",
		"dotenv": "^16.0.1",
		"dotenv-cli": "^5.1.0",
		"env-var": "^7.1.1",
		"fastify": "^3.29.0",
		"fastify-plugin": "^3.0.1",
		"jsonwebtoken": "^8.5.1",
		"typescript": "^4.7.2"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
