{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"pretty": true,
		"noEmitOnError": true,
		"removeComments": true,
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		"useDefineForClassFields": true,
		"lib": ["esnext"]
	},
	"include": ["src/**/*.ts"]
}
